{% extends 'base.html.twig' %}

{% block title %}{{'Category'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Category'|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{'Id'|trans}}</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{{'Name'|trans}}</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}" class="btn btn-outline-dark">{{'Back to list'|trans}}</a>

    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-outline-dark">{{'edit'|trans}}</a>

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
