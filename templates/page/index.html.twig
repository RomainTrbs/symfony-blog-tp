{% extends 'base.html.twig' %}

{% block title %}{{'Page Index'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Page Index'|trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>
                    <a type="button" href="{{ path('app_page_show', {'id': page.id}) }}" class="btn btn-outline-dark"><i class="fa-solid fa-eye"></i></a>
                    <a type="button" href="{{ path('app_page_edit', {'id': page.id}) }}" class="btn btn-outline-dark"><i class="fa-solid fa-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{'no records found'|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a type="button" href="{{ path('app_page_new') }}" class="btn btn-outline-dark"><i class="fa-solid fa-plus"></i> {{'Create New'|trans}}</a>
{% endblock %}
