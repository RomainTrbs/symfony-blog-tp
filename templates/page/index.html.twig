{% extends 'base.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
    <h1>Page index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>
                    <a type="button" href="{{ path('app_page_show', {'id': page.id}) }}" class="btn btn-outline-dark">show</a>
                    <a type="button" href="{{ path('app_page_edit', {'id': page.id}) }}" class="btn btn-outline-dark">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a type="button" href="{{ path('app_page_new') }}" class="btn btn-outline-dark">Create new</a>
{% endblock %}
